<?xml version="1.0" ?>

<robot name="gear_stater_motor" xmlns:xacro="http://wiki.ros.org/xacro" >

    <link name="world"/>

    <joint name="pb_world_joint" type="fixed">
        <parent link="world"/>
        <child link="motor_housing"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
    </joint>

    <link name="motor_housing">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find sirgas_description)/meshes/Motor_Housing.stl" />
            </geometry>
            <material name="LightGrey">
                <color rgba="0.7 0.7 0.7 1.0" />
            </material>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find sirgas_description)/meshes/Motor_Housing.stl" />
            </geometry>
        </collision>
        <inertial>
            <mass value="2.64067069"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.01078765" ixy="0.0" ixz="0.0" iyx="0.0" iyy="0.01078765" iyz="0.0" izx="0.0" izy= "0.0" izz="0.02019148"/>
        </inertial>
    </link>

    <joint name="mh_gr_joint" type="continuous">
        <parent link="motor_housing"/>
        <child link="gear_rotator"/>
        <origin rpy="${pi} 0 0" xyz="0.0 0 0.055"/>
        <axis xyz="0 0 1"/>
        <dynamics damping="1.0" friction="0.1"/>
        <limit effort="1000.0" velocity="10.0"/>
    </joint>

    <link name="gear_rotator">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find sirgas_description)/meshes/Gear_Rotator.stl" />
            </geometry>
            <material name="LightGrey">
                <color rgba="0.7 0.7 0.7 1.0" />
            </material>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find sirgas_description)/meshes/Gear_Rotator.stl" />
            </geometry>
        </collision>
        <inertial>
            <mass value="0.23"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.0004399" ixy="0.0" ixz="0.0" iyx="0.0" iyy="0.0004399" iyz="0.0" izx="0.0" izy= "0.0" izz="0.00017253"/>
        </inertial>
    </link>

    <!-- ROS2 Control Plugin-->
    <ros2_control name="gsm_control" type="system">
        <hardware>
            <plugin>gz_ros2_control/GazeboSimSystem</plugin>
        </hardware>
        <joint name="mh_gr_joint">
            <command_interface name="velocity">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>
    </ros2_control>

    <!-- Fixed Ignition Gazebo plugin for ROS 2 Control -->
    <gazebo>
        <plugin filename="libgz_ros2_control-system.so" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
            <parameters>$(find sirgas_description)/config/gsm_controller.yaml</parameters>
        </plugin>
    </gazebo>

</robot>