<?xml version="1.0" ?>

<robot name="gear_stater_motor" xmlns:xacro="http://wiki.ros.org/xacro" >

    <link name="world"/>

    <joint name="pb_world_joint" type="fixed">
        <parent link="world"/>
        <child link="motor_housing"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
    </joint>

    <link name="motor_housing">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find sirgas_description)/meshes/Motor_Housing.stl" />
            </geometry>
            <material name="LightGrey">
                <color rgba="0.7 0.7 0.7 1.0" />
            </material>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find sirgas_description)/meshes/Motor_Housing.stl" />
            </geometry>
        </collision>
        <inertial>
            <mass value="2.64067069"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.01078765" ixy="0.0" ixz="0.0" iyx="0.0" iyy="0.01078765" iyz="0.0" izx="0.0" izy= "0.0" izz="0.02019148"/>
        </inertial>
    </link>

    <joint name="mh_gr_joint" type="revolute">
        <parent link="motor_housing"/>
        <child link="gear_rotator"/>
        <origin rpy="${pi} 0 0" xyz="0.0 0 0.05"/>
        <axis xyz="0 0 1"/>
        <limit effort="1500.0" lower="${-2*pi}" upper="${2*pi}" velocity="10.0"/>
        <dynamics damping="0" friction="0"/>
    </joint>

    <link name="gear_rotator">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find sirgas_description)/meshes/Gear_Rotator.stl" />
            </geometry>
            <material name="LightGrey">
                <color rgba="0.7 0.7 0.7 1.0" />
            </material>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find sirgas_description)/meshes/Gear_Rotator.stl" />
            </geometry>
        </collision>
        <inertial>
            <mass value="5.00"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.0004399" ixy="0.0" ixz="0.0" iyx="0.0" iyy="0.0004399" iyz="0.0" izx="0.0" izy= "0.0" izz="0.00017253"/>
        </inertial>
    </link>


</robot>